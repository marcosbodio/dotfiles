set $mod Control

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+$mod to drag floating windows to their wanted position
# floating_modifier $mod

mode "i3" {

	# start a terminal
	bindsym Return exec i3-sensible-terminal; mode "default"

	# kill focused window
	bindsym Shift+Q kill; mode "default"

	# start dmenu (a program launcher)
	# bindsym d exec dmenu_run

	# change focus
	# bindsym j focus left; mode "default"
	# bindsym k focus down; mode "default"
	# bindsym l focus up; mode "default"
	# bindsym semicolon focus right; mode "default"

	# alternatively, you can use the cursor keys:
	bindsym Left focus left
	bindsym Down focus down
	bindsym Up focus up
	bindsym Right focus right

	# move focused window
	bindsym Shift+J move left; mode "default"
	bindsym Shift+K move down; mode "default"
	bindsym Shift+L move up; mode "default"
	bindsym Shift+colon move right; mode "default"

	# alternatively, you can use the cursor keys:
	bindsym Shift+Left move left; mode "default"
	bindsym Shift+Down move down; mode "default"
	bindsym Shift+Up move up; mode "default"
	bindsym Shift+Right move right; mode "default"

	# split in horizontal orientation
	bindsym h split h; mode "default"

	# split in vertical orientation
	bindsym v split v; mode "default"

	# enter fullscreen mode for the focused container
	bindsym f fullscreen; mode "default"

	# change container layout (stacked, tabbed, default)
	bindsym s layout stacking; mode "default"
	bindsym w layout tabbed; mode "default"
	bindsym e layout default; mode "default"

	# toggle tiling / floating
	bindsym Shift+space floating toggle; mode "default"

	# change focus between tiling / floating windows
	bindsym space focus mode_toggle; mode "default"

	# focus the parent container
	bindsym a focus parent; mode "default"

	# focus the child container
	#bindcode $mod+d focus child

	# switch to workspace
	bindsym 1 workspace 1; mode "default"
	bindsym 2 workspace 2; mode "default"
	bindsym 3 workspace 3; mode "default"
	bindsym 4 workspace 4; mode "default"
	bindsym 5 workspace 5; mode "default"
	bindsym 6 workspace 6; mode "default"
	bindsym 7 workspace 7; mode "default"
	bindsym 8 workspace 8; mode "default"
	bindsym 9 workspace 9; mode "default"
	bindsym 0 workspace 10; mode "default"

	# move focused container to workspace
	bindsym Shift+exclam move workspace 1; mode "default"
	bindsym Shift+at move workspace 2; mode "default"
	bindsym Shift+numbersign move workspace 3; mode "default"
	bindsym Shift+dollar move workspace 4; mode "default"
	bindsym Shift+percent move workspace 5; mode "default"
	bindsym Shift+asciicircum move workspace 6; mode "default"
	bindsym Shift+ampersand move workspace 7; mode "default"
	bindsym Shift+asterisk move workspace 8; mode "default"
	bindsym Shift+parenleft move workspace 9; mode "default"
	bindsym Shift+parenright move workspace 10; mode "default"

	# reload the configuration file
	bindsym Shift+C reload; mode "default"
	# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
	bindsym Shift+R restart; mode "default"
	# exit i3 (logs you out of your X session)
	bindsym F8 exit; mode "default"

	# Move the current workspace to the next output
	# (effectively toggles when you only have two outputs)
	bindsym x move workspace to output right

	# Toggle between stacking/tabbed/splith/splitv:
	bindsym t layout toggle all

	# Synapse
	bindsym F12 exec synapse; mode "default"

	# cycle across desktops
	bindsym Control+Right workspace next
	bindsym Control+Left workspace prev

	# back to normal: Alt or Escape
	bindsym BackSpace mode "default"
	# bindsym Escape mode "default"
}

bindsym $mod+i mode "i3"

